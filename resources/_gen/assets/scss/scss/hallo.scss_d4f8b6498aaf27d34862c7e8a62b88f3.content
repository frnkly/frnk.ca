html,body{color:#333;margin:1rem;padding:0}html{font:18px/1.618 Montserrat,"Helvetica Neue","Segoe UI",Helvetica,Arial,sans-serif;overflow-y:auto}body{background-color:#fffcf5}a{-webkit-transition:background-color 0.2s ease-out;-moz-transition:background-color 0.2s ease-out;transition:background-color 0.2s ease-out;background-color:#fff8e1;color:#333;font-size:.9rem;margin:0 3px;padding:0 5px;text-decoration:none;text-shadow:1px 1px #eee}a:hover{background-color:#ffe57f}h1{font-size:7rem}h2{font-size:2.5rem;font-weight:normal}h3{font-size:1.8rem;font-weight:normal}@media screen and (max-width: 992px){h1{font-size:15vw}h2{font-size:1.8rem}h3{font-size:1.5rem}}img.portrait{box-sizing:border-box;border-radius:50%;border:2px solid #333;margin:2em 3em;width:100%;height:auto;max-width:300px;max-height:300px}.column{flex:1}main .block{display:flex}main .block.introduction{margin-top:20vh;min-height:calc(100vh - 20vh)}main .column.left{text-align:end}main .column.right h1{margin-left:-10px;margin-bottom:0.4em}main .column.right h2{margin-left:-4px;margin-top:0}main .column.right .links{margin-top:2.5rem;font-size:1.5rem}main .column.right .links a{-webkit-transition:color 0.2s ease-out;-moz-transition:color 0.2s ease-out;transition:color 0.2s ease-out;background-color:transparent;font-size:inherit;margin:0 0.5rem 0 0;padding:0;text-shadow:none}main .column.right .links a:hover{background-color:transparent;color:#ffab00}@media screen and (max-width: 992px){main .block{flex-direction:column}main .block.introduction{margin-top:0}main .column.left{text-align:center}main .column.right h1{margin-top:0}main img.portrait{margin:0}}footer{display:flex;margin-top:3rem;font-size:0.75rem}@media screen and (max-width: 992px){footer{flex-direction:column}}
